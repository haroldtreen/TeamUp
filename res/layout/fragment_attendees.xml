<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    <CheckBox android:id="@+id/checkbox_1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Sophie Beland"
	       />
	    <CheckBox android:id="@+id/checkbox_2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Doug McFarlane"
	        />
	    <CheckBox android:id="@+id/checkbox_3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Harold Treen"
	        />
	    <CheckBox android:id="@+id/checkbox_4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Paul Wells"
	        />
	</LinearLayout>
     
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="horizontal"
    	android:layout_weight="5"
    	android:gravity="bottom" >
    	
        <Button
            android:id="@+id/new_meeting"
            android:text="Schedule"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:onClick="startTabActivity"
          
            
         />
        <Button
            android:id="@+id/toggle_view"
            android:text="Cancel"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="50dip"
            
         />
        
     </LinearLayout>
    

</LinearLayout>