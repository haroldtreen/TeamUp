<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >
    	
        <Button
            android:id="@+id/team_to_meetings"
            android:text="Meetings"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="50dip"
            style="?android:attr/buttonBarButtonStyle"
            
         />
        <Button
            android:id="@+id/team_to_tasks"
            android:text="Tasks"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="50dip"
            
         />
        <Button
            android:id="@+id/team_to_members"
            android:text="Members"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="50dip"
            
            
         />
    	
    </LinearLayout>
    
    <ImageView
        android:id="@+id/calendar_image"
        android:layout_width="match_parent"
        android:layout_height = "match_parent"
        android:layout_weight="1"
        android:src="@drawable/sample_schedule" 
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:paddingTop="40dip"
        android:paddingBottom="40dip"
    />
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="horizontal"
    	android:layout_weight="5" >
    	
        <Button
            android:id="@+id/new_meeting"
            android:text="New Meeting"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:onClick="startTabActivity"
          
            
         />
        <Button
            android:id="@+id/toggle_view"
            android:text="Toggle View"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="50dip"
            
         />
        
     </LinearLayout>
    
    
    

</LinearLayout>